<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gather.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="10" />

    <application
        android:name=".application.GatherApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginIndex"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".activity.LoginPhone"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".activity.RegisterPhone"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".activity.RegisterProve"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".activity.ResetPassword"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".activity.RegisterData"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyleHasDate"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".activity.RegisterIcon"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.RegisterInterest"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.IndexHome"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".activity.SelectCity"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.ActDetail"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.TouchGallery"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity
            android:name=".activity.InterestActList"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.RecommendAct"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".activity.Setting"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.Message"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.SignIn"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.UserInfo"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyleHasDate" >
        </activity>
        <activity
            android:name=".activity.EditData"
            android:screenOrientation="portrait"
            android:theme="@style/ActionBarStyle" >
        </activity>
        <activity
            android:name=".activity.QRCodeScan"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.baidu.location.service_v4.2" >
                </action>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="3N6hoVQrh9qVBjBSwIZbpNRb" />

        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1102364598" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

</manifest>