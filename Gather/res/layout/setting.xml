<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_margin_left_right"
        android:layout_marginRight="@dimen/setting_margin_left_right"
        android:layout_marginTop="@dimen/setting_margin_left_right"
        android:background="@drawable/shape_setting_item_widget"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvRecommend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_high"
            android:background="@drawable/shape_setting_item_click_style"
            android:gravity="center"
            android:text="推荐给好友"
            android:textColor="#FF333333"
            android:textSize="@dimen/setting_item_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#FFC0C0C0" />

        <TextView
            android:id="@+id/tvClear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_high"
            android:background="@drawable/shape_setting_item_click_style"
            android:gravity="center"
            android:text="清除缓存"
            android:textColor="#FF333333"
            android:textSize="@dimen/setting_item_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#FFC0C0C0" />

        <RelativeLayout
            android:id="@+id/rlUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_high"
            android:background="@drawable/shape_setting_item_click_style"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvupdate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_high"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="版本更新"
                android:textColor="#FF333333"
                android:textSize="@dimen/setting_item_text_size" />

            <ImageView
                android:id="@+id/ivVersion"
                android:layout_width="32dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvupdate"
                android:src="@drawable/icon_menu_new_version" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#FFC0C0C0" />

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_high"
            android:background="@drawable/shape_setting_item_click_style"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="#FF333333"
            android:textSize="@dimen/setting_item_text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:background="#FFC0C0C0" />

        <TextView
            android:id="@+id/tvExit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_high"
            android:background="@drawable/shape_setting_item_click_style"
            android:gravity="center"
            android:text="退出集合"
            android:textColor="#FF333333"
            android:textSize="@dimen/setting_item_text_size" />
    </LinearLayout>

</LinearLayout>