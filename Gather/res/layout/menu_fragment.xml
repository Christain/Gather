<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_margin_left"
        android:layout_marginTop="@dimen/menu_margin_top"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="@dimen/menu_user_icon_size"
            android:layout_height="@dimen/menu_user_icon_size"
            android:src="@drawable/icon_share_tencent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司通讯录"
                    android:singleLine="true"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/menu_user_name_text_size" />

                <ImageView
                    android:id="@+id/ivSex"
                    android:layout_width="@dimen/menu_user_sex_icon_size"
                    android:layout_height="@dimen/menu_user_sex_icon_size"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_sex_female" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="个性签名~~~~"
                android:singleLine="true"
                android:textColor="#FFD1D2D3"
                android:textSize="@dimen/menu_user_sign_text_size" />
        </LinearLayout>
    </LinearLayout>

    <com.gather.android.widget.OverScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0.0dp"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginRight="@dimen/menu_item_margin_right"
        android:layout_marginTop="@dimen/menu_item_margin_top"
        android:layout_weight="1.0"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llInterestAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_menu_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/menu_item_minHigh"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/menu_item_icon_size"
                    android:layout_height="@dimen/menu_item_icon_size"
                    android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                    android:src="@drawable/icon_menu_interest_act" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/menu_item_icon_text_margin"
                    android:text="感兴趣的活动"
                    android:textColor="#D1D2D3"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                android:background="@drawable/icon_menu_line" />

            <LinearLayout
                android:id="@+id/llMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_menu_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/menu_item_minHigh"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/menu_item_icon_size"
                    android:layout_height="@dimen/menu_item_icon_size"
                    android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                    android:src="@drawable/icon_menu_message" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/menu_item_icon_text_margin"
                    android:text="消息"
                    android:textColor="#D1D2D3"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                android:background="@drawable/icon_menu_line" />

            <LinearLayout
                android:id="@+id/llSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_menu_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/menu_item_minHigh"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/menu_item_icon_size"
                    android:layout_height="@dimen/menu_item_icon_size"
                    android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                    android:src="@drawable/icon_menu_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/menu_item_icon_text_margin"
                    android:text="设置"
                    android:textColor="#D1D2D3"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                android:background="@drawable/icon_menu_line" />

            <LinearLayout
                android:id="@+id/llRecommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_menu_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/menu_item_minHigh"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/menu_item_icon_size"
                    android:layout_height="@dimen/menu_item_icon_size"
                    android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                    android:src="@drawable/icon_menu_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/menu_item_icon_text_margin"
                    android:text="向我们推荐"
                    android:textColor="#D1D2D3"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                android:background="@drawable/icon_menu_line" />

            <LinearLayout
                android:id="@+id/llSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_menu_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/menu_item_minHigh"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/menu_item_icon_size"
                    android:layout_height="@dimen/menu_item_icon_size"
                    android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                    android:src="@drawable/icon_menu_signin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/menu_item_icon_text_margin"
                    android:text="签到"
                    android:textColor="#D1D2D3"
                    android:textSize="@dimen/menu_item_text_size" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/menu_item_icon_margin_left"
                android:background="@drawable/icon_menu_line" />
        </LinearLayout>
    </com.gather.android.widget.OverScrollView>

    <LinearLayout
        android:id="@+id/llVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="@dimen/menu_item_margin_left"
        android:layout_marginRight="@dimen/menu_item_margin_right"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前版本：1.0"
            android:textColor="#D1D2D3"
            android:typeface="serif"
            android:textSize="@dimen/menu_new_version_text_size" />

        <ImageView
            android:id="@+id/ivVersion"
            android:layout_width="@dimen/menu_new_version_icon_width"
            android:layout_height="@dimen/menu_new_version_icon_high"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_menu_new_version" />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_view_high"/>

</LinearLayout>