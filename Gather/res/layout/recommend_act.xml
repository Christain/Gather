<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <com.gather.android.widget.OverScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/recommend_pic_margin_top" >

                <ImageView
                    android:id="@+id/ivAddPic"
                    android:layout_width="@dimen/recommend_add_pic_icon_size"
                    android:layout_height="@dimen/recommend_add_pic_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_recommend_add_pic" />

                <ImageView
                    android:id="@+id/ivPic"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                    android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image2" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="请上传一张清晰的活动海报图片"
                android:textColor="#999999"
                android:textSize="13sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_item_high"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="30dp" >

                <EditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_recommend_edit_has_focus"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/recommend_edit_padding_left"
                    android:singleLine="true"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/recommend_tip_text_size" />

                <TextView
                    android:layout_width="@dimen/recommend_tip_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_recommend_tip_bg"
                    android:gravity="center"
                    android:text="活动名称"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/recommend_tip_text_size" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_item_high"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="10dp" >

                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommend_act_edit_style"
                    android:hint="可选填"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/recommend_edit_padding_left"
                    android:singleLine="true"
                    android:textColor="#FF333333"
                    android:textColorHint="#bebebe"
                    android:textSize="@dimen/recommend_tip_text_size" />

                <FrameLayout
                    android:layout_width="@dimen/recommend_tip_width"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_recommend_tip_bg"
                        android:gravity="center"
                        android:text="活动时间"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/recommend_tip_text_size" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_item_high"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="10dp" >

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommend_act_edit_style"
                    android:hint="可选填"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/recommend_edit_padding_left"
                    android:singleLine="true"
                    android:textColor="#FF333333"
                    android:textColorHint="#bebebe"
                    android:textSize="@dimen/recommend_tip_text_size" />

                <FrameLayout
                    android:layout_width="@dimen/recommend_tip_width"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_recommend_tip_bg"
                        android:gravity="center"
                        android:text="活动地点"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/recommend_tip_text_size" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/recommend_item_high"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="10dp" >

                <EditText
                    android:id="@+id/etContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/recommend_act_edit_style"
                    android:hint="可选填"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/recommend_edit_padding_left"
                    android:singleLine="true"
                    android:textColor="#FF333333"
                    android:textColorHint="#bebebe"
                    android:textSize="@dimen/recommend_tip_text_size" />

                <FrameLayout
                    android:layout_width="@dimen/recommend_tip_width"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_recommend_tip_bg"
                        android:gravity="center"
                        android:text="联系方式"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/recommend_tip_text_size" />
                </FrameLayout>
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="15dp"
                android:text="备注"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="8dp"
                android:background="@drawable/recommend_act_edit_style"
                android:gravity="top|left"
                android:lineSpacingExtra="1.0dp"
                android:maxLength="500"
                android:maxLines="6"
                android:minHeight="80dp"
                android:padding="10dp"
                android:textColor="#FF333333"
                android:textSize="@dimen/recommend_tip_text_size" />

            <LinearLayout
                android:id="@+id/llLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_recommend_location" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="成都市"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCommit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/recommend_item_margin_left_right"
                android:layout_marginRight="@dimen/recommend_item_margin_left_right"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_recommend_commit_style"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/font_white"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </com.gather.android.widget.OverScrollView>

</LinearLayout>