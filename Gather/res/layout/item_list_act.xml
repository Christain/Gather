<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_item_divider_high" />

    <FrameLayout
        android:id="@+id/flItemAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivActPic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image2" />

        <View
            android:id="@+id/viewBackground"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="#66000000" />

        <ImageView
            android:id="@+id/ivActStatus"
            android:layout_width="@dimen/act_item_status_size"
            android:layout_height="@dimen/act_item_status_size"
            android:layout_gravity="top|left"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvActTitle"
                style="@style/act_item_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:singleLine="true"
                android:text="活动标题"
                android:textColor="@color/font_white"
                android:textSize="@dimen/act_item_title_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/act_item_time_icon_size"
                        android:layout_height="@dimen/act_item_time_icon_size"
                        android:src="@drawable/icon_act_time" />

                    <TextView
                        android:id="@+id/tvActTime"
                        style="@style/act_item_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:text="10月20日"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/act_item_time_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/act_item_time_icon_size"
                        android:layout_height="@dimen/act_item_time_icon_size"
                        android:src="@drawable/icon_act_location" />

                    <TextView
                        android:id="@+id/tvActAddress"
                        style="@style/act_item_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:text="天府大道"
                        android:textColor="@color/font_white"
                        android:textSize="@dimen/act_item_time_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_act_item_menu_widget"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/act_item_menu_padding_top"
        android:paddingLeft="@dimen/act_item_menu_padding_left"
        android:paddingRight="@dimen/act_item_menu_padding_left"
        android:paddingTop="@dimen/act_item_menu_padding_top" >

        <TextView
            android:id="@+id/tvActInterestOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/font_blue"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="标签内容"
            android:textColor="@color/font_white"
            android:textSize="@dimen/act_item_interest_text_size" />

        <TextView
            android:id="@+id/tvActInterestTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/act_item_menu_padding_left"
            android:background="@color/font_red"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="标签内容"
            android:textColor="@color/font_white"
            android:textSize="@dimen/act_item_interest_text_size" />

        <View
            android:layout_width="0.0dp"
            android:layout_height="10dp"
            android:layout_weight="1.0" />

        <LinearLayout
            android:id="@+id/llActShare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/act_item_share_icon_size"
                android:layout_height="@dimen/act_item_share_icon_size"
                android:src="@drawable/icon_act_share" />

            <TextView
                android:id="@+id/tvActShareNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="19999"
                android:textColor="@color/login_text"
                android:textSize="@dimen/act_item_interest_text_size"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llActInterest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivActInterest"
                android:layout_width="@dimen/act_item_share_icon_size"
                android:layout_height="@dimen/act_item_share_icon_size"
                android:src="@drawable/icon_act_interest" />

            <TextView
                android:id="@+id/tvActInterestNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="19999"
                android:textColor="@color/login_text"
                android:textSize="@dimen/act_item_interest_text_size"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>