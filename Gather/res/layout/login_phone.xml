<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_phone_edit_high"
        android:layout_marginLeft="@dimen/login_phone_margin"
        android:layout_marginRight="@dimen/login_phone_margin"
        android:layout_marginTop="@dimen/login_phone_margin"
        android:background="@drawable/shape_login_edit" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:src="@drawable/icon_login_phone" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:hint="请填写手机号"
                android:text="15828695160"
                android:typeface="serif"
                android:textSize="@dimen/login_phone_edit_text_size"
                android:textColor="@color/login_text"
                android:inputType="number"
                android:maxLength="13"
                android:background="#00000000"
                android:textColorHint="#CCCCCC"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
       	android:layout_height="@dimen/login_phone_edit_high"
        android:layout_marginLeft="@dimen/login_phone_margin"
        android:layout_marginRight="@dimen/login_phone_margin"
        android:layout_marginTop="@dimen/login_phone_distance"
        android:background="@drawable/shape_login_edit" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_width="@dimen/login_icon_size"
                android:layout_height="@dimen/login_icon_size"
                android:src="@drawable/icon_login_password" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:hint="请输入密码"
                android:typeface="serif"
                android:text="123456"
                android:textSize="@dimen/login_phone_edit_text_size"
                android:inputType="textPassword"
                android:textColor="@color/login_text"
                android:maxLength="8"
                android:background="#00000000"
                android:textColorHint="#CCCCCC"/>
        </LinearLayout>
    </FrameLayout>
    
    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_phone_edit_high"
        android:layout_marginLeft="@dimen/login_phone_margin"
        android:layout_marginRight="@dimen/login_phone_margin"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_button"
        android:text="登录"
        android:textColor="@color/font_white"
        android:textSize="17sp" />
    
    <LinearLayout 
        android:layout_marginLeft="@dimen/login_phone_margin"
        android:layout_marginRight="@dimen/login_phone_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tvFindPassword"
            android:text="忘记密码？"
            android:textSize="14sp"
            android:paddingTop="@dimen/login_phone_distance"
            android:paddingBottom="@dimen/login_phone_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/select_login_text_color"/>
        <View 
            android:layout_width="0.0dp"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>
        
         <TextView 
            android:id="@+id/tvRegister"
            android:text="创建帐号"
            android:paddingTop="@dimen/login_phone_distance"
            android:paddingBottom="@dimen/login_phone_distance"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/select_login_text_color"/>
    </LinearLayout>

</LinearLayout>