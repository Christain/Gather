<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical" >

    <com.gather.android.widget.OverScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llUserIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_user_icon_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人头像"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <View
                    android:layout_width="0.0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1.0" />

                <ImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="@dimen/user_info_item_user_icon_size"
                    android:layout_height="@dimen/user_info_item_user_icon_size"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_share_tencent" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_divider"
                android:paddingLeft="20dp"
                android:text="基本资料"
                android:textColor="#999999"
                android:textSize="@dimen/user_info_divider_text_size" />

            <LinearLayout
                android:id="@+id/llNickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvNickName"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="零创科技"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#FFC0C0C0" />

            <LinearLayout
                android:id="@+id/llUserSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserSex"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="男"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#FFC0C0C0" />

            <LinearLayout
                android:id="@+id/llUserAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="年龄"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserAge"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="24"
                    android:typeface="serif"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_divider"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细资料"
                    android:textColor="#999999"
                    android:textSize="@dimen/user_info_divider_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="(可选填)"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/llUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="公司通讯录"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#FFC0C0C0" />
            
            <LinearLayout
                android:id="@+id/llUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserPhone"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:typeface="serif"
                    android:text="123 4567 8900"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#FFC0C0C0" />
            
            <LinearLayout
                android:id="@+id/llUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="通讯地址"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserAddress"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="成都市"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_divider"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号绑定"
                    android:textColor="#999999"
                    android:textSize="@dimen/user_info_divider_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="(绑定账号可使用工具参与活动)"
                    android:textColor="#999999"
                    android:textSize="11sp" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/llUserSina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserSina"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="Christain_yu"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.0px"
                android:background="#FFC0C0C0" />
            
            <LinearLayout
                android:id="@+id/llUserTencent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_user_info_item_click_style"
                android:gravity="center_vertical"
                android:minHeight="@dimen/user_info_item_high"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/user_info_item_padding_left_right"
                android:paddingRight="@dimen/user_info_item_padding_left_right" >

                <TextView
                    android:layout_width="@dimen/user_info_tip_width"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:typeface="serif"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <TextView
                    android:id="@+id/tvUserTencent"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:singleLine="true"
                    android:text="495419488"
                    android:textColor="@color/login_text"
                    android:textSize="@dimen/user_info_item_text_size" />

                <ImageView
                    android:layout_width="@dimen/user_info_item_arrow_size"
                    android:layout_height="@dimen/user_info_item_arrow_size"
                    android:src="@drawable/icon_user_info_arrow" />
            </LinearLayout>
            
            <View 
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_info_divider"/>
            
        </LinearLayout>
    </com.gather.android.widget.OverScrollView>

</LinearLayout>